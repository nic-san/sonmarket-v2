@model IEnumerable<sonmarket.Models.Categoria>
@{
    Layout = "_LayoutAdm";
}
<h2>Categorias</h2>
<hr />
<a class="btn btn-success" asp-controller="Gestao" asp-action="NovaCategoria">Nova categoria</a>
<a class="btn btn-info" asp-controller="Gestao" asp-action="AtivarCategoria">Ativar categoria</a>
<hr />

<script>
    $(document).ready(function () {
        $('#categorias').DataTable();
    });
</script>

<table id="categorias" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.Nome</td>
                <td>
                    <a href="/Gestao/EditarCategoria/@cat.Id" class="btn btn-primary">Editar</a>
                    <form asp-controller="Categorias" asp-action="Deletar" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@cat.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>